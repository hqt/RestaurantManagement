<h1>Listing orders</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Date create</th>
    <th>Table</th>
    <th>Status</th>
    <th>Dishes</th>
    <th>Price</th>
    <th>Currency</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.date_create %></td>
    <td><%= order.table %></td>
    <td><%= order.status %></td>
    <td><%= order.dishes %></td>
    <td><%= order.price %></td>
    <td><%= order.currency %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

